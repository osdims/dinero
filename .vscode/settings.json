{
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--follow-imports=silent",
        "--show-column-numbers",
        "--allow-untyped-defs",
        "--allow-subclassing-any",
        "--allow-untyped-calls",
        "--strict"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "peacock.remoteColor": "#111827",
    "cSpell.words": [
        "ariary",
        "autorefs",
        "Codacy",
        "Dinero",
        "d√≥lares",
        "getcontext",
        "inlinehilite",
        "linenums",
        "mkdocstrings",
        "prec",
        "pymdownx",
        "repr",
        "superfences",
        "Traceback",
        "treinta"
    ],
    "editor.formatOnSave": true,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#202e4b",
        "activityBar.background": "#202e4b",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#9c4360",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#202e4b",
        "statusBar.background": "#111827",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#202e4b",
        "statusBarItem.remoteBackground": "#111827",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#111827",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#11182799",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "flake8.enabled": true,
    "flake8.args": [
        "--ignore=E501",
    ],
    "editor.defaultFormatter": "ms-python.black-formatter",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
}